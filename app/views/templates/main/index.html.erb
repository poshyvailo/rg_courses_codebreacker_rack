<div class="card-panel center-align">
  <div class="card-content">
    <span class="card-title">
      <h2>Welcome to Codebreacker game</h2>
    </span>
  </div>
  <div class="card-action">
    <% if @request.current_user? %>
      <% if @request.game? %>
        <a href="/game/start" class="waves-effect waves-light btn-large">
          continue unfinished game
        </a>
        or
      <% end %>
      <a href="/game/start" class="waves-effect waves-light btn-large">
        start new game
      </a>
    <% else %>
      <a href="/login" class="waves-effect waves-light btn">
        <strong>login</strong>
      </a>
      or
      <a href="/register" class="waves-effect waves-light btn">
        <strong>register</strong>
      </a>
    <% end %>
  </div>
</div>
